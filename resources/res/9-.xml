    <com.atakmap.android.gui.PanListPreference android:title="Waypoint Flight Mode" android:key="uastool.route.pref_waypoint_flightmode" android:summary="@string/pref_route_waypoint_flightmode_sum"/>
    <com.atakmap.android.gui.PanListPreference android:title="Waypoint Finish Action" android:key="uastool.route.pref_waypoint_finishaction" android:summary="@string/pref_route_waypoint_finishaction_sum"/>
