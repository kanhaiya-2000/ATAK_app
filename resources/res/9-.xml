<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Route Defaults" android:key="Route"/>
    <com.atakmap.android.gui.PanEditTextPreference android:numeric="integer" android:title="Altitude" android:key="uastool.route.pref_altitude" android:summary="@string/pref_route_altitude_sum" android:inputType="number"/>
    <com.atakmap.android.gui.PanEditTextPreference android:numeric="integer" android:title="Speed" android:key="uastool.route.pref_speed" android:summary="@string/pref_route_speed_sum" android:inputType="number"/>
    <CheckBoxPreference android:title="Auto Takeoff" android:key="uastool.route.pref_autotakeoff" android:summary="@string/pref_route_autotakeoff_sum" android:defaultValue="true"/>
    <com.atakmap.android.gui.PanEditTextPreference android:numeric="integer" android:title="Orbit Speed" android:key="uastool.route.pref_orbitpoint_speed" android:summary="@string/pref_route_orbitpoint_speed_sum" android:inputType="number"/>
