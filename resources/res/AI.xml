<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textColor="@color/lightBlue" android:id="@+id/new_task_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/new_task_title" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <View android:id="@+id/divider" android:background="@color/lightBlue" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:layout_below="@+id/new_task_title" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/new_task_platform_title" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginBottom="16dp" android:text="@string/new_task_platform_title" android:layout_below="@+id/divider" android:layout_marginEnd="16dp" android:layout_alignParentStart="true"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/new_task_platform_value" android:layout_width="match_parent" android:layout_height="40dp" android:layout_below="@+id/divider" android:spinnerMode="dialog" android:layout_toEndOf="@+id/new_task_platform_title" android:layout_alignParentEnd="true" style="@style/darkButton"/>
    <TextView android:textColor="@color/lightBlue" android:id="@+id/new_task_platform_warn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/new_task_platform_warn" android:layout_below="@+id/new_task_platform_value" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/new_task_type_title" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/new_task_type_title" android:layout_below="@+id/new_task_platform_warn" android:layout_alignEnd="@+id/new_task_platform_title" android:layout_alignParentStart="true"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/new_task_type_value" android:layout_width="match_parent" android:layout_height="40dp" android:layout_below="@+id/new_task_platform_warn" android:spinnerMode="dialog" android:layout_toEndOf="@+id/new_task_type_title" android:layout_alignStart="@+id/new_task_platform_value" android:layout_alignParentEnd="true" style="@style/darkButton"/>
</RelativeLayout>
