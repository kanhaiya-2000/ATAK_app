<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.uastool.tasks.route.edit.SpeedEdit xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/pointedit_speed_layout" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/pointedit_select_speed" android:background="@color/darker_gray" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="6dp">
        <CheckBox android:id="@+id/pointedit_select_speed_check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textStyle="normal|bold|italic" android:textColor="@color/white" android:id="@+id/pointedit_text_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pointedit_speed" android:paddingEnd="4dp" android:layout_toEndOf="@+id/pointedit_select_speed"/>
    <TextView android:textSize="12sp" android:textStyle="normal|bold|italic" android:textColor="@color/white" android:id="@+id/pointedit_units_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(m/s)" android:layout_alignBaseline="@+id/pointedit_text_speed" android:layout_toEndOf="@+id/pointedit_text_speed"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/lightBlue" android:id="@+id/pointedit_value_speed" android:layout_width="60dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignBaseline="@+id/pointedit_text_speed" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/pointedit_units_speed"/>
    <ImageButton android:id="@+id/pointedit_minus_speed" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="6dp" android:src="@drawable/ic_menu_minus" android:scaleType="fitCenter" android:layout_below="@+id/pointedit_text_speed" android:layout_marginStart="6dp" android:layout_alignStart="@+id/pointedit_text_speed" style="@style/darkButton"/>
    <SeekBar android:id="@+id/pointedit_seek_speed" android:paddingTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/pointedit_text_speed" android:layout_toStartOf="@+id/pointedit_plus_speed" android:layout_toEndOf="@+id/pointedit_minus_speed"/>
    <ImageButton android:id="@+id/pointedit_plus_speed" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="6dp" android:src="@drawable/ic_menu_plus" android:scaleType="fitCenter" android:layout_below="@+id/pointedit_text_speed" android:layout_marginEnd="6dp" android:layout_alignParentEnd="true" style="@style/darkButton"/>
</com.atakmap.android.uastool.tasks.route.edit.SpeedEdit>
