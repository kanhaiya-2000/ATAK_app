<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:paddingTop="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="14sp" android:textStyle="normal|bold|italic" android:textColor="@color/white" android:id="@+id/pointedit_text_coord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pointedit_coord" android:layout_alignParentLeft="true" android:paddingEnd="4dp"/>
    <TextView android:textSize="12sp" android:textStyle="normal|bold|italic" android:textColor="@color/white" android:id="@+id/pointedit_units_coord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(MGRS)" android:layout_toRightOf="@+id/pointedit_text_coord" android:layout_alignBaseline="@+id/pointedit_text_coord"/>
    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/lightBlue" android:id="@+id/pointedit_value_coord" android:layout_width="200dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignBaseline="@+id/pointedit_text_coord" android:inputType="text" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/pointedit_units_coord"/>
    <Button android:gravity="center" android:id="@+id/pointedit_pick_coord" android:paddingLeft="10dp" android:layout_width="200dp" android:layout_height="40dp" android:src="@drawable/action_pick" android:scaleType="fitCenter" android:text="@string/pointedit_coord_pick" android:drawablePadding="-40dp" android:layout_below="@+id/pointedit_value_coord" android:layout_alignParentRight="true" android:drawableStart="@drawable/action_pick" android:layout_marginEnd="6dp" style="@style/darkButton"/>
</RelativeLayout>
