<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.uastool.flightlog.FlightLogScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/flightlog_layout" android:layout_width="match_parent" android:layout_height="match_parent">
