<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/config_mavlink" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video Source Adapter"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/mavlink_video_source_adapter" android:layout_width="match_parent" android:layout_height="40dp" style="@style/darkButton"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Network Protocol"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/mavlink_network_type" android:layout_width="match_parent" android:layout_height="40dp" style="@style/darkButton"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/config_layout_mavlink_ip" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Platform IP"/>
        <EditText android:id="@+id/mavlink_ip" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/config_layout_mavlink_port" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Platform PORT"/>
        <EditText android:id="@+id/mavlink_port" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/config_layout_mavlink_video" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video URI (e.g. udp://239.1.1.1:1000)"/>
        <EditText android:id="@+id/mavlink_video_uri" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video URI #2 (e.g. udp://239.1.1.1:1000)"/>
        <EditText android:id="@+id/mavlink_video_uri2" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
