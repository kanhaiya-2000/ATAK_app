<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/config_generic" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video Source Adapter"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/generic_video_source_adapter" android:layout_width="match_parent" android:layout_height="40dp" style="@style/darkButton"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video URI (e.g. udp://239.1.1.1:1000)"/>
    <EditText android:id="@+id/generic_video_uri" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Aero Computers IP"/>
    <EditText android:id="@+id/generic_cot_dst_ip" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Aero Computers port"/>
    <EditText android:id="@+id/generic_cot_dst_port" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"/>
</LinearLayout>
