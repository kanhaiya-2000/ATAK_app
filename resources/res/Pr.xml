<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="#ff222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="4dp">
            <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/feature_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Feature"/>
            <TextView android:textSize="18sp" android:layout_gravity="center_vertical" android:id="@+id/feature_status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status Unknown"/>
        </LinearLayout>
        <LinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/commandButton_ll" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/separator" android:background="#ffffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="7dp" android:layout_marginRight="7dp"/>
    </RelativeLayout>
</RelativeLayout>
