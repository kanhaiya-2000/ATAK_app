<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/routepoint_item" android:padding="6dp" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/routepoint_summary" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/routepoint_select" android:background="@color/darker_gray" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="6dp">
            <CheckBox android:id="@+id/routepoint_select_check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" android:layout_marginStart="0dp" android:layout_marginEnd="0dp"/>
        </RelativeLayout>
        <ImageButton android:layout_gravity="center" android:id="@+id/routepoint_icon_button" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/waypoint" android:scaleType="fitCenter" style="@style/darkButton"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingLeft="10sp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/routepoint_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="name"/>
            <TextView android:textSize="12sp" android:textStyle="italic" android:id="@+id/routepoint_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="description" android:paddingStart="4dp"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/routepoint_expand" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/item_closed"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/routepoint_actions" android:background="@color/darker_gray" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/routepoint_down_button" android:padding="6dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_down" android:scaleType="fitCenter" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routepoint_up_button" android:padding="6dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_up" android:scaleType="fitCenter" android:layout_marginEnd="20dp" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routepoint_edit_button" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_edit" android:scaleType="fitCenter" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routepoint_copy_button" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_copy" android:scaleType="fitCenter" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routepoint_delete_button" android:padding="6dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_delete" android:scaleType="fitCenter" android:layout_marginStart="20dp" style="@style/darkButton"/>
    </LinearLayout>
</LinearLayout>
