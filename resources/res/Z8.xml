<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/darker_gray" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="4dp" android:paddingEnd="4dp">
    <RelativeLayout android:id="@+id/main_layout" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/uastype_button" android:clickable="false" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/uas_blank" android:scaleType="fitCenter" android:layout_centerVertical="true" android:layout_marginEnd="4dp" android:layout_alignParentStart="true" style="@style/darkButton"/>
        <TextView android:textStyle="bold" android:textColor="@color/white" android:id="@+id/callsign_value" android:paddingTop="2dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/temp_callsign" android:lines="1" android:ems="10" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/signal_value" android:layout_toEndOf="@+id/uastype_button"/>
        <TextView android:textSize="12sp" android:textStyle="italic" android:textColor="@color/white" android:id="@+id/summary_value" android:paddingTop="4dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/temp_model" android:lines="1" android:ems="10" android:layout_below="@+id/callsign_value" android:paddingStart="6dp" android:layout_toStartOf="@+id/signal_value" android:layout_alignStart="@+id/callsign_value"/>
        <ImageButton android:id="@+id/top_running_toggle" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/taskstate_running" android:scaleType="fitCenter" android:layout_centerVertical="true" android:layout_marginEnd="4dp" android:layout_toStartOf="@+id/signal_value" style="@style/darkButton"/>
        <ImageView android:id="@+id/signal_value" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/signal_0" android:layout_alignTop="@+id/play_button" android:layout_alignBottom="@+id/play_button" android:layout_centerVertical="true" android:alpha="0.8" android:layout_marginEnd="-4dp" android:layout_toStartOf="@+id/battery_progress"/>
        <TextView android:textSize="11sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/battery_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100%" android:lines="1" android:ems="4" android:layout_alignTop="@+id/battery_progress" android:layout_alignBottom="@+id/battery_progress" android:layout_alignStart="@+id/battery_progress" android:layout_alignEnd="@+id/battery_progress"/>
        <ProgressBar android:id="@+id/battery_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="100" android:progress="25" android:secondaryProgress="100" android:indeterminate="false" android:progressDrawable="@drawable/battery_progress" android:layout_alignTop="@+id/play_button" android:layout_alignBottom="@+id/play_button" android:alpha="0.8" android:layout_toStartOf="@+id/top_panto_button" style="?android:attr/progressBarStyleHorizontal"/>
        <ImageButton android:id="@+id/top_panto_button" android:padding="8dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_view" android:layout_centerVertical="true" android:layout_marginEnd="6dp" android:layout_toStartOf="@+id/play_button" style="@style/darkButton"/>
        <ImageButton android:id="@+id/play_button" android:padding="4dp" android:clickable="true" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/action_run" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_alignParentEnd="true" style="@style/darkButton"/>
    </RelativeLayout>
    <include android:id="@+id/task_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_below="@+id/main_layout" android:layout_marginEnd="4dp" layout="@layout/taskprogress_layout"/>
    <RelativeLayout android:id="@+id/sub_layout" android:paddingTop="2dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/task_progress">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/actions_layout" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageButton android:id="@+id/settings_button" android:padding="6dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_settings" android:scaleType="fitCenter" android:layout_marginEnd="4dp" style="@style/darkButton"/>
            <ImageButton android:id="@+id/health_button" android:padding="6dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_health" android:scaleType="fitCenter" android:layout_marginEnd="4dp" style="@style/darkButton"/>
            <ImageButton android:id="@+id/unlock_button" android:padding="6dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_unlock_on" android:scaleType="fitCenter" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" style="@style/darkButton"/>
            <ImageButton android:id="@+id/panto_button" android:padding="6dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/action_view" android:scaleType="fitCenter" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" style="@style/darkButton"/>
            <ImageButton android:id="@+id/running_toggle" android:padding="6dp" android:clickable="true" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/taskstate_running" android:scaleType="fitCenter" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" style="@style/darkButton"/>
        </LinearLayout>
        <View android:id="@+id/divider2" android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/actions_layout" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:backgroundTint="@color/lightGrey"/>
        <com.atakmap.android.uastool.pagers.status.StatusMetaList android:id="@+id/meta_list" android:paddingBottom="10dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/actions_layout" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </RelativeLayout>
</RelativeLayout>
