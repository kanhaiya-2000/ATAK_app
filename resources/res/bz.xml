<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.uastool.dji.DJIButtonsScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:src="@drawable/dji_rc" android:scaleType="centerInside" android:adjustViewBounds="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
            <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="C1" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_c1" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="C2" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_c2" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5D Up" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:entries="@array/dji_5dbutton_actions" android:id="@+id/dji_button_5dup" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5D Down" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_5ddown" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5D Left" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_5dleft" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5D Right" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_5dright" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5D In" android:layout_weight="2"/>
                <TextView android:textColor="@color/lightBlue" android:id="@+id/dji_button_5din" android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="1" style="@style/darkButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginBottom="5dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
        <Button android:textSize="14sp" android:id="@+id/dji_button_discard" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Discard" android:layout_weight="1" style="@style/darkButton"/>
        <Button android:textSize="14sp" android:id="@+id/dji_button_save" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Save" android:layout_weight="1" style="@style/darkButton"/>
    </LinearLayout>
</com.atakmap.android.uastool.dji.DJIButtonsScreen>
