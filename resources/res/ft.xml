<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/routeimport_item_visible" android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/item_unselected" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/routeimport_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="name" android:paddingStart="16dp" android:layout_toEndOf="@+id/routeimport_item_visible"/>
        <TextView android:textSize="12sp" android:textStyle="italic" android:id="@+id/routeimport_item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="description" android:layout_below="@+id/routeimport_item_name" android:paddingStart="20dp" android:layout_toEndOf="@+id/routeimport_item_visible"/>
        <ImageButton android:id="@+id/routeimport_item_select" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_menu_import" android:layout_centerInParent="true" android:layout_alignParentEnd="true" style="@style/darkButton"/>
    </RelativeLayout>
</LinearLayout>
