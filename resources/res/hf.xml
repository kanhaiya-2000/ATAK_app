<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/receivedtasks_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:ellipsize="marquee" android:gravity="center" android:id="@+id/receivedtasks_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/received_tasks" android:singleLine="true" android:layout_alignTop="@+id/receivedtasks_delete_all" android:layout_alignBottom="@+id/receivedtasks_delete_all"/>
        <ImageButton android:id="@+id/receivedtasks_delete_all" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginBottom="4dp" android:src="@drawable/action_delete" android:scaleType="fitCenter" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" style="@style/darkButton"/>
        <ListView android:id="@+id/receivedtasks_list" android:layout_width="match_parent" android:layout_height="match_parent" android:groupIndicator="@null" android:divider="#000000" android:dividerHeight="6px" android:layout_below="@+id/receivedtasks_delete_all"/>
    </RelativeLayout>
</LinearLayout>
