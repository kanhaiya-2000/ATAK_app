<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.uastool.tasks.route.RouteTaskEdit xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageButton android:id="@+id/routetaskedit_addpoint" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_menu_plus" android:scaleType="fitCenter" android:layout_alignParentTop="true" android:layout_alignParentStart="true" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routetaskedit_delete_all" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/action_delete" android:scaleType="fitCenter" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/routetaskedit_addpoint" style="@style/darkButton"/>
        <Button android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:ellipsize="marquee" android:layout_gravity="center" android:id="@+id/routetaskedit_name" android:layout_width="wrap_content" android:layout_height="32dp" android:text="@string/routetaskedit_name" android:singleLine="true" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/routetaskedit_multi" android:layout_toEndOf="@+id/routetaskedit_delete_all" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routetaskedit_multi" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/action_multiselect" android:layout_alignParentTop="true" android:spinnerMode="dialog" android:layout_toStartOf="@+id/routetaskedit_platform" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routetaskedit_platform" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/uav_rotary" android:layout_alignParentTop="true" android:spinnerMode="dialog" android:layout_toStartOf="@+id/routetaskedit_color" style="@style/darkButton"/>
        <ImageButton android:id="@+id/routetaskedit_color" android:padding="6dp" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/action_stop" android:text="@string/routetaskedit_color" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" style="@style/darkButton"/>
        <ListView android:id="@+id/routetaskedit_points_list" android:paddingTop="6dp" android:layout_width="match_parent" android:layout_height="0dp" android:groupIndicator="@null" android:layout_above="@+id/routetaskedit_buttons" android:layout_below="@+id/routetaskedit_addpoint"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/routetaskedit_buttons" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_alignParentBottom="true">
            <Button android:id="@+id/routetaskedit_cancel" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/routetaskedit_cancel" android:layout_weight="1" style="@style/darkButton"/>
            <Button android:id="@+id/routetaskedit_selectall" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/routetaskedit_selectall" android:layout_weight="1" style="@style/darkButton"/>
            <Button android:id="@+id/routetaskedit_save" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/routetaskedit_save" android:layout_weight="1" style="@style/darkButton"/>
        </LinearLayout>
    </RelativeLayout>
</com.atakmap.android.uastool.tasks.route.RouteTaskEdit>
