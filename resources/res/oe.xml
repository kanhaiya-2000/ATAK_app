<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/config_PD100" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video Source Adapter"/>
    <com.atakmap.android.gui.PluginSpinner android:id="@+id/pd100_video_source_adapter" android:layout_width="match_parent" android:layout_height="40dp" style="@style/darkButton"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video IP"/>
    <EditText android:id="@+id/pd100_video_ip" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video PORT"/>
    <EditText android:id="@+id/pd100_video_port" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Incoming CoT UDP Port"/>
    <EditText android:id="@+id/pd100_cot_udp_port" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Incoming CoT TCP Port"/>
    <EditText android:id="@+id/pd100_cot_tcp_port" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"/>
</LinearLayout>
